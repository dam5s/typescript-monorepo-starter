{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-namespace": [2, {"allowDeclarations": true}],
    "quotes": ["error", "single", {"avoidEscape": true}],
    "semi": ["error", "always"]
  }
}
